function onZsh()
    tabInfo = {}
    tabInfo.name = 'Zsh tab'
    tabInfo.command = 'zsh'
    tabInfo.encoding = 'UTF-8'
    tabInfo.working_dir = '/tmp'
    openTab(tabInfo)
end
function onNamed()
    setTabName('New tab name')
end
function onClose()
    closeTab()
end
function onReconf()
    reconfigure()
end

